generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  schemas  = ["public"]
}

model Feedback {
  id        BigInt   @id @default(autoincrement())
  name      String   @unique
  company   String?
  comment   String?
  avatar    String?
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  @@map("feedbacks")
  @@schema("public")
}

model Project {
  id          BigInt   @id @default(autoincrement())
  title       String
  category    ProjectCategory
  description String
  client      String?
  imageUrl    String   @map("image_url")
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  @@map("projects")
  @@schema("public")
}

model TimelineExperience {
  id         BigInt           @id @default(autoincrement())
  startYear  Int              @map("start_year")
  endYear    Int?             @map("end_year")
  isCurrent  Boolean          @default(false) @map("is_current")
  role       String
  company    String
  description String
  createdAt  DateTime         @default(now()) @map("created_at") @db.Timestamptz(6)

  gallery    TimelineGallery[]

  @@map("timeline_experiences")
  @@schema("public")
}

model TimelineGallery {
  id           BigInt            @id @default(autoincrement())
  experienceId BigInt            @map("experience_id")
  imageUrl     String            @map("image_url")
  createdAt    DateTime          @default(now()) @map("created_at") @db.Timestamptz(6)

  experience   TimelineExperience @relation(fields: [experienceId], references: [id], onDelete: Cascade)

  @@map("timeline_gallery")
  @@schema("public")
}

enum Role {
  ADMIN
  USER

  @@schema("public")
}

enum ProjectCategory {
  BRANDING_IDENTIDADE @map("Branding & Identidade")
  TRAFEGO_PAGO @map("Tráfego Pago")
  GESTAO_REDES_SOCIAIS @map("Gestão de Redes Sociais")
  CRM_AUTOMACAO @map("CRM & Automação")
  MIDIA_OFF @map("Mídia Off")

  @@schema("public")
}

model Profile {
  id        String   @id @default(uuid()) @db.Uuid
  role      Role     @default(USER)
  createdAt DateTime @map("created_at") @default(now()) @db.Timestamptz(6)

  @@map("profiles")
  @@schema("public")
}
